@import "vars"

*
  margin 0
  padding 0
  box-sizing border-box
  color inherit

*::before
*::after
  box-sizing border-box

html
  height 100%
  overflow-y hidden

body
  font-size default-font-size
  font-weight 300
  font-family 'Jost'
  line-height 1.5
  background light-color
  color dark-color
  height 100%
  overflow hidden
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

body
  overflow hidden
  height 100%

a
  text-decoration none
  color accent-color

[href]:hover
  text-decoration underline

#wrapper
  display flex
  flex-flow column
  height 100%

::-webkit-scrollbar
  background mid-color
  width 8px

::-webkit-scrollbar-thumb
  background dark-color
  border-radius 8px

  .dark-mode &
    background light-color
    border-radius 8px

::selection
  background accent-color

.dark-mode
  background dark-color
  color light-color

.big-mode
  font-size default-font-size-big

#feed-header
  padding-bottom 32px
  text-decoration underline
  color dark-color
  font-size big-title-font-size

  .dark-mode &
    color light-color

  .big-mode &
    font-size big-title-font-size-big

#header
  flex 0 0 auto
  width 100%
  height header-height
  border-bottom 2px solid dark-color
  padding-left 10px
  padding-right 10px
  user-select none

  padding-top 3px
  display grid
  grid-template-columns 10% 80% 10%
  grid-template-rows auto
  justify-content stretch
    
  .dark-mode &
    border-color light-color

#menu-section
  width 48px
  font-size 32px

.menu-button-open
  color mid-color

#menu
  display none
  position relative
  left 0px
  top 10px
  background-color dark-color
  color light-color
  width 7em
  box-shadow: -2px 7px 7px rgba(0, 0, 0, 0.5)
  border-left 1px solid light-color
  border-bottom 1px solid light-color
  border-right 1px solid light-color
  z-index 99999

  &.menu-open
    display flex
    flex-direction column

  .dark-mode &
    background-color light-color
    color dark-color
    border-color dark-color

.menu-item
  width 100%
  font-size default-font-size
  padding-left 8px
  cursor pointer


  &:hover
    background-color mid-color

  .big-mode &
    font-size default-font-size-big

  @media (any-pointer: coarse)
    font-size default-font-size-big
    height 48px
    line-height 48px
    vertical-align middle

.menu-item-link
  color light-color

  .dark-mode &
    color dark-color

  &:hover
    text-decoration none

.menu-item-checkable
  display flex
  justify-content space-between
  align-items center
  padding-right 8px

.menu-item-mode
  @media(min-width: 760px)
    display none

#menu-item-big
  border-bottom 1px solid light-color
  padding-bottom 2px

  .dark-mode &
    border-color dark-color

#menu-items-categories
  display flex
  flex-direction column
  border-bottom 1px solid light-color
  padding-bottom 2px

  .dark-mode &
    border-color dark-color

.menu-item-category-selected
  background-color accent-color

#title-section
  justify-self center
  a
    text-decoration none

#title
  font-size 32px
  a
    color dark-color

    .dark-mode &
      color light-color

.logo
  height 48px

#logo-dark
  display block

  .dark-mode &
    display none

#logo-light
  display none

  .dark-mode &
    display block

#subtitle
  display none
  height 10px
  position absolute
  font-size 14px
  width 100px
  top 12px
  left 155px

#mode-section
  width 150px
  display none
  flex-direction column
  gap 4px
  justify-self end

  @media(min-width: 760px)
    display flex

.mode
  width 70px
  font-size 13px
  font-weight bold
  border 1px solid dark-color
  text-align center
  cursor pointer

  .dark-mode &
    border-color light-color

.mode-selected
  background-color accent-color
  color light-color

.mode-subsection
  display flex
  justify-content right
  
.mode-left
  border-radius 10px 0px 0px 10px
  border-right 1px solid dark-color

.mode-right
  border-radius 0px 10px 10px 0px
  border-left 1px solid dark-color

#main
  flex 1 1 auto
  min-height 1px
  display flex
  flex-direction row

#content-wrapper
  width 100%
  flex 1 1 auto
  display flex
  flex-direction column

#content
  width 100%
  height 100%
  overflow-y scroll
  padding 16px
  display flex
  flex-direction column
  align-items center
  overflow-x hidden
  box-shadow inset 0 10px 10px -10px rgb(0 0 0 / 50%)

  .dark-mode &
    scrollbar-color mid-color light-color

#sidebar
  flex 0 0 1px
  position relative
  display none
  flex-direction column
  height 100%
  align-items center
  justify-content space-around
  gap 10px
  padding 4px
  width 350px
  border-left 1px solid dark-color
  user-select none

  @media(min-width: 1078px)
    display flex

  @media(max-height: 308px)
    display none

  .dark-mode &
    border-color light-color

for adNum in range(1, 7)
  #sidebar-ad-{adNum}
    display none

    @media(min-height: (308 + ((adNum - 1) * 260))px)
      display block

.sidebar-ad
  width 300px
  height 250px
  border 1px solid dark-color
  line-height 250px
  text-align center

  .dark-mode &
    border-color light-color

.article
  padding-bottom article-padding
  max-width article-width
  width 100%

  .big-mode &
    padding-bottom article-padding-big

  .content-article-full &
    padding-bottom full-article-padding

.article-title
  max-width article-title-width
  line-height 1.3
  font-size 1.5em

.article-filtered
  height 0
  overflow hidden
  padding-bottom 0

  .big-mode &
    padding-bottom 0

.article-title-link
  font-size title-font-size
  font-weight bold

  .big-mode &
    font-size title-font-size-big

.article-subheader
  display flex
  justify-content space-between
  padding-bottom 16px
  gap 16px

.article-subheader-left
  display flex
  flex-direction row
  align-items center
  gap 32px

.article-subheader-right
  display flex
  flex-direction row
  align-items center
  gap 32px

  @media (pointer: coarse)
    gap 8px

.article-subheader-right-item
  display flex
  flex-direction row
  align-items center
  gap 8px
  height 100%

.article-right-text
  font-size label-font-size

  .big-mode &
    font-size label-font-size-big

  @media (pointer: coarse)
    display none

.article-right-icon
  padding-left 16px
  cursor pointer
  text-align center
  line-height 100%

  @media (pointer: coarse)
    height 48px
    width 48px
    padding-top 8px

.article-right-button
  font-size title-font-size
  color dark-color

  .big-mode &
    font-size title-font-size-big

  .dark-mode &
    color light-color

.article-share-button
  @media (pointer: fine)
    display none

.article-social-share
  min-width 150px

  @media (pointer: coarse)
    display none

  &.popup
    display contents

.facebook-share-icon
  color facebook-color

.twitter-share-icon
  color twitter-color

.linkedin-share-icon
  color linkedin-color

.article-published
  font-size label-font-size

  .big-mode &
    font-size label-font-size-big

.article-category
  font-size label-font-size

  .big-mode &
    font-size label-font-size-big

.article-summary
  display block
  padding-bottom 16px
  text-align justify

  &:last-child
    padding-bottom 0

.article-paragraph
  padding-bottom 12px

  &:last-child
    padding-bottom 0

.article-image
  padding-bottom 16px
  display flex
  justify-content space-around
  max-height 200px
  overflow hidden

  &.no-article-image
    display none

  @media(min-width: 640px)
    display block
    float right
    max-width 30%
    padding-bottom 0
    padding-left 20px

  img
    width auto
    height auto
    object-fit scale-down

    @media(min-width: 640px)
      display block
      max-width 100%
      max-height 200px

.article-footer
  display flex
  flex-direction row
  align-items center
  flex-wrap wrap-reverse
  padding-top 12px
  gap 16px

.article-footer-left
  display flex
  flex 1 0 auto
  gap 8px
  flex-wrap wrap
  align-items center

.article-footer-right
  display flex
  flex 1 1 auto
  gap 8px

.original-article-link
  flex 0 1 auto
  height 100%
  font-size default-font-size
  font-weight bold

  .big-mode &
    font-size default-font-size-big

.article-tags
  display flex
  flex-wrap wrap
  gap 8px
  flex 0 1 auto

.article-tag
  border-radius 8px

  color light-color
  font-size label-font-size
  font-weight bold
  padding-left 8px
  padding-right 8px

  .big-mode &
    font-size label-font-size-big

.article-paywalled
  background-color error-color

.article-political
  background-color go-color

.article-bias
  width 100%
  display flex
  flex-direction column

.article-bias-meter-section
  flex 0 1 auto
  display flex
  flex-direction column
  align-items center
  gap 2px

.article-bias-meter-label
  flex 0 0 auto
  font-size label-font-size

  .big-mode &
    font-size label-font-size-big

.article-bias-meter
  flex 0 0 auto

.article-bias-text
  font-size label-font-size
  text-align center

  .big-mode &
    font-size label-font-size-big

.article-bias-meter
  border 1px solid dark-color
  border-radius 9px
  width 80%
  height 24px
  display flex
  position relative

  .dark-mode &
    border-color light-color

  & .article-bias-1
    background linear-gradient(to right, green, lightgreen)
    border-radius 8px 0px 0px 8px

  & .article-bias-2
    background linear-gradient(to right, lightgreen, yellow)

  & .article-bias-3
    background linear-gradient(to right, yellow, orange)

  & .article-bias-4
    background linear-gradient(to right, orange, red)

  & .article-bias-5
    background linear-gradient(to right, red, darkred)
    border-radius 0px 8px 8px 0px

  & .disabled
    opacity 0.5
    filter grayscale(1)

  & .selected
    border-right 1px solid black

  & .article-bias-segment
    width 20%
    height 100%
    text-align center
    color dark-color
    font-size label-font-size

  & .article-bias-help
    display none
    background-color dark-color
    color light-color
    border-radius 8px
    border 1px solid dark-color
    padding 8px
    z-index 99999
    width 120%
    transform translate(-10%, 0)
    opacity .8

    .dark-mode &
      background-color light-color
      color dark-color
      border-color light-color

  &:hover .article-bias-help
    display inline-block
    position absolute
    top 125%


.related-articles
  display flex
  flex-direction column
  max-width article-width
  width 100%

.related-articles-list
  display flex
  flex-direction column
  gap 8px
  padding-bottom full-article-padding
  padding-left 64px

.related-articles-title
  max-width article-title-width
  text-align justify
  font-size small-title-font-size
  font-weight bold

  .big-mode &
    font-size small-title-font-size-big

.feed-ad
  display flex
  justify-content center
  padding-bottom article-padding

  .big-mode &
    padding-bottom article-padding-big

  .content-article-full &
    padding-bottom full-article-padding

.feed-ad *
  border 1px solid dark-color

  .dark-mode &
    border-color light-color

.feed-ad-big
  display none
  
  @media(min-width: 740px)
    display inline-block

.feed-ad-small
  display none
  
  @media(max-width: 739px)
    display inline-block

.article-end
  font-size title-font-size
  font-weight bold
  padding 12px
  text-align center

  .big-mode &
    font-size title-font-size-big

#article-load-error
  color error-color

#no-more-articles
  color accent-color

#feed-loading
  font-size feed-loading-font-size
  color dark-color

  .big-mode &
    font-size feed-loading-font-size-big

  .dark-mode &
    color light-color

#refresh-page-end
  background-color accent-color
  font-size default-font-size
  border-radius 8px
  cursor pointer
  color light-color
  width 150px
  text-align center

  .big-mode &
    font-size default-font-size-big

#remember-place
  display none

.bottom-shadow
  box-shadow -3px 1px 10px rgb(0 0 0 / 50%)

#audio-controls
  width 50%
  max-width 800px
  min-width 350px
  position absolute
  left 50%
  bottom 50px
  transform translateX(-50%)
  box-shadow 1px 3px 10px 1px dark-color
  background-color dark-color
  border-radius 8px
  padding 8px
  display none

  .dark-mode &
    background-color light-color

  &.visible
    display flex
    flex-direction column
    flex-wrap wrap
    gap 8px

#audio-player-options-collapse
  font-size label-font-size
  font-weight bold
  color accent-color
  text-align center
  cursor pointer

  .big-mode &
    font-size label-font-size-big

  @media (pointer: coarse)
    height 48px
    line-height 48px
    font-size default-font-size

    .big-mode &
      font-size default-font-size-big

#audio-player-options
  gap 18px
  display none

  &.visible
    display flex
    flex-direction column

.audio-player-option
  display flex
  flex-direction row
  gap 16px

.audio-player-option-value
  font-size 18px
  max-width 250px

  @media (pointer: coarse)
    height 48px

  .dark-mode &
    color dark-color

.audio-player-option-label
  color light-color
  font-size default-font-size
  width 80px

  @media (pointer: coarse)
    font-size 24px
    line-height 24px
    margin auto 0

  .dark-mode &
    color dark-color


#audio-player-controls
  display flex
  flex-direction row
  gap 32px
  justify-content center
  justify-self center
  align-items middle

.audio-button
  color light-color
  cursor pointer
  padding-top 4px
  font-size big-title-font-size

  .big-mode &
    font-size big-title-font-size-big

  .dark-mode &
    color dark-color

  @media (pointer: coarse)
    font-size 48px

    .big-mode &
      font-size 52px


#audio-player-play-next
  display flex
  flex-direction row
  align-items center
  background-color dark-color
  color light-color
  cursor pointer

  .dark-mode &
    background-color light-color

#play-next-article
  border-radius 8px
  background-color error-color
  text-align center
  font-size default-font-size
  font-weight bold
  width 100%

  &.play-next
    background-color green

  .big-mode &
    font-size default-font-size-big

  @media (pointer: coarse)
    height 48px
    line-height 48px

#footer
  flex 0 1 1px
  display flex
  flex-direction row
  justify-content space-around
  border-top 1px solid dark-color
  font-size label-font-size
  user-select none

  .dark-mode &
    border-color white

#audio-mark
  color dark-color

.tooltip
  visibility hidden
  background-color dark-color
  color light-color
  text-align center
  font-size label-font-size
  padding 4px
  border-radius 8px
  position absolute
  z-index 999999

  .dark-mode &
    background-color light-color
    color dark-color

  .big-mode &
    font-size label-font-size-big

  &.visible
    visibility visible

